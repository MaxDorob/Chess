<Window x:Class="Chess.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess"
        mc:Ignorable="d"
        Title="ConnectWindow" Height="125" Width="350">
    <Grid>
        <Button Content="Client" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Width="150" Click="ClientStart"/>
        <Button Content="Server" HorizontalAlignment="Left" Margin="182,64,0,0" VerticalAlignment="Top" Width="150" Click="ServerStart"/>
        <TextBox x:Name="IpBox" HorizontalAlignment="Left" Height="23" Margin="10,36,0,0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" Width="173"/>
        <TextBox x:Name="PortBox" HorizontalAlignment="Left" Height="23" Margin="212,36,0,0" TextWrapping="Wrap" Text="2103" VerticalAlignment="Top" Width="120"/>
        <Label Content="IP" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top"/>
        <Label Content="Port" HorizontalAlignment="Left" Margin="212,0,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
